{
  "extends": "../../../tsconfig.base",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "rootDir": ".",
    "tsBuildInfoFile": "build/.tsbuildinfo.builders",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "references": [
    {
      "path": "./tsconfig.build.composite.json"
    },
    {
      "path": "../core/tsconfig.build.composite.json"
    },
    {
      "path": "../extractors/tsconfig.build.json"
    },
    {
      "path": "../schematics/tsconfig.build.json"
    }
  ],
  "include": [
    "builders/**/*.ts",
    "schematics/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "schematics/**/templates/**"
  ]
}
