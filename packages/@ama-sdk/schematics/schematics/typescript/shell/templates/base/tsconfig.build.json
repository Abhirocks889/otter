{
  "compilerOptions": {
    "types": [],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
    "removeComments": false,
    "lib": [
      "dom",
      "es2015",
      "dom.iterable",
      "scripthost",
      "es2017.object"
    ],
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "<% if (projectName) { %>@<%=projectName%>/<% } %><%=projectPackageName%>/helpers/*": [
        "./src/helpers/*"
      ],
      "<% if (projectName) { %>@<%=projectName%>/<% } %><%=projectPackageName%>/helpers": [
        "./src/helpers/index"
      ],
      "<% if (projectName) { %>@<%=projectName%>/<% } %><%=projectPackageName%>": [
        "./src/index"
      ],
      "<% if (projectName) { %>@<%=projectName%>/<% } %><%=projectPackageName%>/*": [
        "./src/*"
      ],
      "<% if (projectName) { %>@<%=projectName%>/<% } %><%=projectPackageName%>/spec": [
        "./src/spec/index"
      ]
    }
  }
}
