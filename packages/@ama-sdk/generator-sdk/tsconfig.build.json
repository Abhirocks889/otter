{
  "extends": "../../../tsconfig.base",
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "./build/tsconfig.esm2020.tsbuildinfo",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./"
  },
  "references": [
    {
      "path": "../core/tsconfig.build.json"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/templates/**",
    "src/**/*.spec.ts"
  ]
}
